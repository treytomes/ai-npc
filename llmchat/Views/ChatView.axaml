<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:llmchat.ViewModels"
	xmlns:views="using:llmchat.Views"
    x:Class="llmchat.Views.ChatView"
    x:DataType="vm:ChatViewModel">

	<Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <TextBlock
            Text="{Binding Title}"
            FontSize="20"
            FontWeight="Bold"
            Margin="12"/>

        <!-- Chat history -->
        <views:ChatHistoryView
            Grid.Row="1"
            Margin="12"
            DataContext="{Binding History}" />

        <!-- Message input -->
        <views:MessageInputView
            Grid.Row="2"
            Margin="12"
            DataContext="{Binding MessageInput}" />
	</Grid>
</UserControl>
